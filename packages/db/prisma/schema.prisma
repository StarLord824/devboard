generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  name      String
  email     String   @unique
  password  String
  photo     String?
  boards    Board[]  @relation("createdBoards")
  participatedBoards Board[] @relation("participated")
  Chats     Chat[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Board {
  id        String   @id @default(uuid())
  slug      String   @unique
  admin      User     @relation("createdBoards", fields: [adminId], references: [id])
  adminId    String
  participants User[] @relation("participated")
  Chats     Chat[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id        Int      @id @default(autoincrement())
  message   String
  board     Board    @relation(fields: [boardId], references: [id])
  boardId   String
  sender      User     @relation(fields: [senderId], references: [id])
  senderId    String
  createdAt DateTime @default(now())
}